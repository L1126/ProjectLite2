<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/my_dialog_style"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="新建文件"
        android:textStyle="bold"
        android:textColor="#353535"
        android:textSize="18sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/newFileName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|left"
            android:gravity="center"
            android:text="名称"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/eNewFileName"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/edit_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/newFileName"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/FileClass"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|left"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="文件类型"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/newFileClass"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="115dp"
            android:layout_gravity="center"
            android:background="@drawable/edit_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/FileClass"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/FileLoad"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|left"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="保存位置"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/newFileLoad"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:background="@drawable/edit_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/FileLoad"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button"
            android:layout_width="70dp"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center"
            android:text="选 择"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/newFileLoad" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="50dp">

        <Button
            android:id="@+id/cancel"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:text="取 消"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/confirm"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:text="确 定"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>